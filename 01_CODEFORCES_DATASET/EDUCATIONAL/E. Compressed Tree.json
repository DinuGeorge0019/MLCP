@**%##+=-%@#=-------------====+++*##*++=-:.\n                                 ..:-+#===+#  .-:=+=*+*+#*+==+++++++++**%@@@@@@@@@@@*-@@#+=+==+@@=--------------===+++*##*+=-:.\n                                  ..:=%+==+%       =#*-##*#+=%+++=++*+#%@@@@@@@@@@:%@#*=+=-+=#@@+-=-------------====+*#*++=-:.\n                                     .=*===*      .--#:..-#@@-.   .:=**@@@@@@@@*@@@%+%+@@=--#@%=--:----------------=+++==-:.\n                                       =::--         :*-##==-.        -@@@@@@@@@@@@@@@@@@@@@%+=::::::::::::::::::--====-:..\n                                           ...        *%=-.....       %@@@@@@@@@@@@@@@@@@@@@*-::..:.............:::--:..      .-:\n                                                  ::  ==.   .....    +@%@@@@@@@@@@@@@@@@@@@@*.:. . ...          .... .     =@*-:\n                                                      ::..:---::... :#*#@@@@@@@@@%%@@@@@@@@@@+ .                  :*    ##+%+:\n                                                             ...::::*-:::@@@@@@%##%%%%@@@@@@@#                   -+. *+ =  -:\n                                                                   ..  .#@@%%%%##*+*#%@@@%%%=                    . :     ::\n                                                                        @@@%%%######%%%%#####%=                =        #\n                                                                          @@@@@%@@%%%###*##*-                 . .     =\n                                                                          :@@%%%%###******+=-                 .\n                                                                            *@###***+**+++:\n                                                                               -*- =*++*:\n\n\n                                         Credit for the pic: J5-daigada from deviantart\n*/\n#include <cassert>\n#include <cstdio>\n#include <cstring>\n#include <cstdlib>\n#include <cmath>\n#include <ctime>\n#include <cctype>\n\n#include <algorithm>\n#include <random>\n#include <bitset>\n#include <queue>\n#include <functional>\n#include <set>\n#include <map>\n#include <vector>\n#include <chrono>\n#include <iostream>\n#include <iomanip>\n#include <limits>\n#include <numeric>\n#include <unordered_map>\n#include <unordered_set>\n\nusing namespace std;\n\n#define int long long\n\nconst int N = 1e6, INF = 1e18;\nint a[N];\nvector<int> g[N];\nint dp[N][4];\n\nint get(int v) {\n    return max(dp[v][0], max(dp[v][1] - a[v], max(dp[v][2] + a[v], dp[v][3])));\n}\n\nint ans;\n\nvoid dfs(int v, int p = -1) {\n    dp[v][0] = a[v];\n    dp[v][1] = dp[v][2] = dp[v][3] = -INF;\n    vector<int> ch;\n    for (int u : g[v]) {\n        if (u != p) {\n            dfs(u, v);\n            ch.push_back(get(u));\n        }\n    }\n    sort(ch.rbegin(), ch.rend());\n    if ((int)ch.size() >= 1) {\n        dp[v][1] = a[v] + ch[0];\n    }\n    if ((int)ch.size() >= 2) {\n        dp[v][2] = ch[0] + ch[1];\n    }\n    if ((int)ch.size() >= 3) {\n        dp[v][3] = a[v] + ch[0] + ch[1] + ch[2];\n        for (int i = 3; i < (int)ch.size(); ++i) {\n            if (ch[i] < 0) break;\n            dp[v][3] += ch[i];\n        }\n    }\n    ans = max(ans, max(dp[v][0], max(dp[v][1], max(dp[v][2], dp[v][3]))));\n}\n\nvoid solve() {\n    int n;\n    cin >> n;\n    for (int i = 0; i < n; ++i) {\n        cin >> a[i];\n        g[i].clear();\n    }\n    for (int i = 1; i < n; ++i) {\n        int u, v;\n        cin >> u >> v;\n        --u; --v;\n        g[u].push_back(v);\n        g[v].push_back(u);\n    }\n    ans = 0;\n    dfs(0);\n    cout << ans << \"\\n\";\n}\n\nsigned main() {\n    ios::sync_with_stdio(false);\n    cin.tie(nullptr);\n    int uwu = 1;\n    cin >> uwu;\n    while (uwu--) {\n        solve();\n    }\n    return 0;\n}\n"], "input": "", "output": "", "tags": ["dfs and similar", "dp", "graphs", "greedy", "sortings", "trees"], "dificulty": "2200", "interactive": false}